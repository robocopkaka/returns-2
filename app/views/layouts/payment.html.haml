!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? "CAC Return - #{yield(:title)}" : "CAC Returns"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application", "data-turbolinks-track" => false
    = csrf_meta_tag


  %body.application{"data-no-turbolink" => true}
    #header
      .row
        = render '/layouts/header'


    #container
      .row
        .small-12.columns
          = render '/layouts/error_header'

      .row
        = yield